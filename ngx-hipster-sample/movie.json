{
  "name": "movie",
  "pageTitle": "Movies",
  "pageOptions": {
    "list": {
      "displayFields": ["title", "genre"]
    }
  },
  "fields": [
    {
      "label": "Title",
      "name": "title",
      "dataType": "string",
      "controlType": "text",
      "validation": {
        "required": true,
        "minlength": 2,
        "maxlength": 200
      }
    },
    {
      "label": "Plot",
      "name": "plot",
      "dataType": "string",
      "controlType": "textarea",
      "validation": {
        "minlength": 100,
        "maxlength": 1000
      }
    },
    {
      "label": "Genre",
      "name": "genre",
      "dataType": "string",
      "controlType": "radio",
      "validation": {
        "required": true
      },
      "options": [
        {
          "name": "Adventure",
          "label": "Adventure"
        },
        {
          "name": "Drama",
          "label": "Drama"
        }
      ]
    }
  ]
}
